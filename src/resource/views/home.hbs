<div class="mt-4">
  <div class="row">

    {{#each courses}}
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" />
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.decription}}</p>
          <a href="#" class="btn btn-primary">Details</a>
        </div>
      </div>
    </div>
    {{/each }}
  </div>
</div>